.pageheader
  .breadcrumb-wrapper.hidden-xs
    %ol.breadcrumb
      %li.active Dashboard

%section#main-content

  .row
    .col-md-12.col-lg-12
      .panel.panel-default
        .panel-heading
          %h3.panel-title Revenue
          .reportdate.actions
            %span
              %input{type: :text, name: :daterange, value: "#{1.month.ago.strftime("%Y-%m-%d")} - #{Time.now.strftime("%Y-%m-%d")}"}
              %i.fa.fa-calendar-o
        .panel-body.revenue-chart
          .row
            .col-md-12.col-lg-12
              .row
                .col-md-12.col-lg-12
                  .line-chart
                    %canvas#canvas1{height: "100"}

  .row
    .col-md-12.col-lg-8
      .row
        .col-md-12
          .panel.panel-solid-success.widget-mini
            .panel-body
              %i.icon-bar-chart
              %span.total.text-center
                = Api::V1::Order.total_revenue
              %span.title.text-center Total Revenue
        .col-md-3
          .panel.widget-mini
            .panel-body
              %i.icon-layers
              %span.total.text-center
                = Api::V1::Product.total_products
              %span.title.text-center Products
        .col-md-6
          .panel.widget-mini
            .panel-body
              %i.icon-clock
              %span.total.text-center
                = Api::V1::Order.total_hours
              %span.title.text-center Hours
        .col-md-3
          .panel.widget-mini
            .panel-body
              %i.icon-user
              %span.total.text-center
                = Api::V1::Order.total_customers
              %span.title.text-center Customers

    .col-xs-12.col-sm-6.col-md-6.col-lg-4
      .panel.panel-default.browser-chart
        .panel-heading
          %h3.panel-title PRODUCT HOURS
        .panel-body
          .row
            .col-xs-6.col-sm-6.col-md-6.col-lg-6
              %ul
                - colors = [:success, :primary, :warning, :info, :danger, :default, :alert, :secondary, :tertiary]
                - Api::V1::Product.usage_breakdown.keys.each_with_index do |product,i|
                  %li
                    %i{class: "fa fa-circle #{colors[i]}-color"}
                    = product.sku.gsub('capsule:','')
            .col-xs-6.col-sm-6.col-md-6.col-lg-6
              #doughnut-canvas-holder
                %canvas#doughnut-chart-area{height: "137", width: "137"}


- content_for :javascript do
  :javascript
    $(document).ready(function() {
        Rocketboard.dateRangePicker();
        Rocketboard.chartJs();
    });