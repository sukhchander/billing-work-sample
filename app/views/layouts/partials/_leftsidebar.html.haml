%h5.sidebar-header

%nav

  %ul.nav.nav-pills.nav-stacked

    %li{class: "#{:active if controller?('dashboard') && action?('index')}"}
      = link_to dashboard_path do
        %i.fa.fa-fw.fa-tachometer
        Dashboard

    %li{class: "nav-dropdown open #{'active open' if controller?('charts')}"}
      = link_to '#' do
        %i.fa.fa-fw.fa-bar-chart-o
        Analytics
      %ul.nav-sub
        %li{class: "#{:active if controller?('dashboard') && action?('customers')}"}
          = link_to dashboard_type_path(:customers) do
            %i.fa.fa-fw.fa-user
            Customers
        %li{class: "#{:active if controller?('dashboard') && action?('products')}"}
          = link_to dashboard_type_path(:products) do
            %i.fa.fa-fw.icon-layers
            Products